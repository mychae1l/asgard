<div class="profile__info">
	<p><%= @user.category %></p>
	<p><%= @user.firsname %></p>
	<p><%= @user.email %></p>
	<%= link_to 'edit', edit_user_path(@user) %>
	<% if current_user.image.present? %>
		<%= image_tag (@user.image), class: "profile__image" %>

	<% else %>
		<img class="profile__image" src="default_image.png">
	<% end %>
	
</div>